<p id="notice"><%= notice %></p>

<h1>Crews</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crews.each do |crew| %>
      <tr>
        <td><%= crew.name %></td>
        <td><%= crew.group.name %></td>
        <td><%= link_to 'Show', group_crew_path(@group, crew) %></td>
        <td><%= link_to 'Edit', edit_group_crew_path(@group, crew) %></td>
        <td><%= link_to 'Destroy', group_crew_path(@group, crew), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crew', new_group_crew_path(@group) %>
<%= link_to 'Volver', groups_path %>
